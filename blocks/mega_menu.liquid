<div class="mega-menu">
  <div class="mega-menu__column mega-menu__main">
    <a href="{{ block.settings.main_category_1_link }}">{{ block.settings.main_category_1 }}</a>
    <a href="{{ block.settings.main_category_2_link }}">{{ block.settings.main_category_2 }}</a>
    <a href="{{ block.settings.main_category_3_link }}">{{ block.settings.main_category_3 }}</a>
  </div>
  <div class="mega-menu__column">
    <div class="mega-menu__heading">{{ block.settings.skincare_heading }}</div>
    <a href="{{ block.settings.skincare_1_link }}">{{ block.settings.skincare_1 }}</a>
    <a href="{{ block.settings.skincare_2_link }}">{{ block.settings.skincare_2 }}</a>
    <a href="{{ block.settings.skincare_3_link }}">{{ block.settings.skincare_3 }}</a>
    <a href="{{ block.settings.skincare_4_link }}">{{ block.settings.skincare_4 }}</a>
    <a href="{{ block.settings.skincare_5_link }}">{{ block.settings.skincare_5 }}</a>
    <a href="{{ block.settings.skincare_all_link }}">{{ block.settings.skincare_all }}</a>
  </div>
  <div class="mega-menu__column">
    <div class="mega-menu__heading">{{ block.settings.haircare_heading }}</div>
    <a href="{{ block.settings.haircare_1_link }}">{{ block.settings.haircare_1 }}</a>
    <a href="{{ block.settings.haircare_2_link }}">{{ block.settings.haircare_2 }}</a>
    <a href="{{ block.settings.haircare_3_link }}">{{ block.settings.haircare_3 }}</a>
    <a href="{{ block.settings.haircare_4_link }}">{{ block.settings.haircare_4 }}</a>
    <a href="{{ block.settings.haircare_5_link }}">{{ block.settings.haircare_5 }}</a>
    <a href="{{ block.settings.haircare_all_link }}">{{ block.settings.haircare_all }}</a>
  </div>
  <div class="mega-menu__column mega-menu__featured">
    <div class="mega-menu__heading">{{ block.settings.featured_heading }}</div>
    {% for i in (1..3) %}
      {% capture img_key %}featured_image_{{ i }}{% endcapture %}
      {% assign img = block.settings[img_key] %}
      {% capture badge_key %}featured_badge_{{ i }}{% endcapture %}
      {% assign badge = block.settings[badge_key] %}
      {% capture title_key %}featured_title_{{ i }}{% endcapture %}
      {% assign title = block.settings[title_key] %}
      {% capture desc_key %}featured_desc_{{ i }}{% endcapture %}
      {% assign desc = block.settings[desc_key] %}
      {% capture link_key %}featured_link_{{ i }}{% endcapture %}
      {% assign link = block.settings[link_key] %}
      {% if img != blank or title != blank %}
      <div class="mega-menu__product">
        {% if img != blank %}
          <a href="{{ link }}"><img src="{{ img | img_url: 'medium' }}" alt="{{ title }}" width="120" height="120" /></a>
        {% endif %}
        {% if badge != blank %}<div class="mega-menu__badge">{{ badge }}</div>{% endif %}
        <div class="mega-menu__title">{{ title }}</div>
        <div class="mega-menu__desc">{{ desc }}</div>
      </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
.mega-menu {
  display: flex;
  background: #fff;
  padding: 2em;
  gap: 2em;
  border-radius: 12px;
  box-shadow: 0 2px 16px rgba(0,0,0,0.08);
}
.mega-menu__column { flex: 1; }
.mega-menu__main a {
  display: block;
  font-size: 2em;
  font-weight: bold;
  margin-bottom: 1em;
}
.mega-menu__heading {
  font-weight: bold;
  font-size: 1.3em;
  margin-bottom: 0.5em;
}
.mega-menu__product {
  background: #f8f8f8;
  border-radius: 8px;
  padding: 1em;
  margin-bottom: 1em;
  text-align: center;
}
.mega-menu__badge {
  background: #1ca000;
  color: #fff;
  padding: 0.2em 0.6em;
  border-radius: 6px;
  font-size: 0.9em;
  margin-bottom: 0.5em;
  display: inline-block;
}
.mega-menu__title { font-weight: bold; margin-bottom: 0.2em; }
.mega-menu__desc { font-size: 0.95em; color: #666; }
</style>

